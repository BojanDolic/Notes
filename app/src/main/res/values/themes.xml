<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.KotlinNotesApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange</item>
        <item name="colorSecondaryVariant">#B65831</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="colorPrimaryDark">@color/black</item>
        <item name="android:statusBarColor">#2FFFFFFF</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeStyle">@style/ActionModeStyle</item>
        <item name="actionBarTheme">@style/ThemeOverlay.MaterialComponents.ActionBar</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="ActionModeStyle" parent="Widget.AppCompat.ActionMode">
        <item name="backgroundColor">@color/white</item>
        <item name="backgroundTint">@color/white</item>
        <item name="iconTint">@color/orange</item>
        <item name="titleTextAppearance">@font/opensans_regular</item>
    </style>
</resources>